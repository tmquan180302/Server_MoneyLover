<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Chi tiết giao dịch</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">

    </div>
  </div>
</div>

<div class="col py-3">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/transaction/user/<%= data.userId._id %>">Giao dịch</a></li>
          <li class="breadcrumb-item active">
            <%= data.category.name %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">

    </div>
  </div>

</div>

<ul class="list-group">

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Ngày</b></div>
      <div class="col">
        <% const formattedDate = new Date(data.day ? data.day : data.dayStart).toISOString().split('T')[0]; %>
        <%= formattedDate %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Ghi chú:</b></div>
      <div class="col">
        <%= data.note ? data.note : '(Không có ghi chú)' %>
      </div>
    </div>
  </li>


  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Số tiền:</b></div>
      <div class="col">
        <%= data.price.toLocaleString('vi-VN') %> VNĐ
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Danh mục:</b></div>
      <div class="col">
        <%= data.category.type===0 ? 'Loại chi' : 'Loại thu' %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Ngày tạo:</b></div>
      <div class="col">
        <%= data.createdAt.toLocaleString('en') %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Ngày sửa:</b></div>
      <div class="col">
        <%= data.updatedAt.toLocaleString('en') %>
      </div>
    </div>
  </li>

  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>
          <%= data.frequency ? "Tần suất" : "Loại chi tiêu" %>
        </b></div>
      <div class="col">
        <%= data.frequency ? data.frequency : "Giao dịch thông thường" %>
      </div>
    </div>
  </li>

</ul>